generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Enums ----------
enum Currency {
  USD
  CAD
  EUR
  GBP
  AUD
  INR
}

enum CardStatus {
  PENDING_ACTIVATION
  ACTIVE
  INACTIVE
  BLOCKED
  EXPIRED
  TERMINATED
}

enum CardType {
  VIRTUAL
  PHYSICAL
}

enum CardProvider {
  SYNCTERA
}

enum WalletRole {
  ADMIN
  MEMBER
}

enum LedgerScope {
  CARD_POOL
  CARD_MEMBER_EQUITY
  CARD_PENDING_WITHDRAWAL
}

enum LedgerEntryKind {
  DEPOSIT
  WITHDRAWAL_HOLD
  WITHDRAWAL_RELEASE
  WITHDRAWAL_PAYOUT
  CARD_AUTH
  CARD_CLEARING
  ADJUSTMENT
  OTHER
}

enum AuthHoldStatus {
  PENDING
  CLEARED
  REVERSED
  EXPIRED
}

enum WithdrawalStatus {
  REQUESTED
  APPROVED
  PROCESSING
  COMPLETED
  FAILED
}

enum WithdrawalTransferStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REVERSED
}

enum WebhookEventType {
  CARD_AUTH
  CARD_CLEARING
  CARD_STATUS
  ACCOUNT_STATUS
  KYC_VERIFICATION
  OTHER
}

// ---------- Users ----------
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  fullName     String
  phone        String?  @unique
  passwordHash String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  verification   UserVerification?
  walletsOwned   Wallet[]          @relation("WalletAdmin")
  walletMembers  WalletMember[]
  cardsHeld      Card[]            @relation("CardHolder")
  accounts       Account[]
  withdrawals    Withdrawal[]
  cardAuthHolds  CardAuthHold[]
  ledgerAccounts LedgerAccount[]
}

model UserVerification {
  id            String   @id @default(uuid())
  userId        String   @unique
  emailVerified Boolean  @default(false)
  phoneVerified Boolean  @default(false)
  kycStatus     String   @default("unverified")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ---------- Wallets ----------
model Wallet {
  id          String   @id @default(uuid())
  name        String
  adminUserId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  admin          User            @relation("WalletAdmin", fields: [adminUserId], references: [id])
  members        WalletMember[]
  cards          Card[]
  withdrawals    Withdrawal[]
  ledgerAccounts LedgerAccount[]
  cardAuthHolds  CardAuthHold[]

  @@index([adminUserId])
}

model WalletMember {
  id       String     @id @default(uuid())
  walletId String
  userId   String
  role     WalletRole @default(MEMBER)
  joinedAt DateTime   @default(now())

  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([walletId, userId])
  @@index([walletId, role])
}

// ---------- Accounts & Cards ----------
model Account {
  id                 String   @id @default(uuid())
  userId             String
  cardId             String?  @unique
  currency           Currency @default(USD)
  cachedBalanceCents BigInt   @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  card    Card?           @relation("CardAccount")
  ledgers LedgerAccount[]
}

model Card {
  id                 String       @id @default(uuid())
  walletId           String
  accountId          String       @unique
  holderUserId       String
  status             CardStatus   @default(PENDING_ACTIVATION)
  type               CardType     @default(VIRTUAL)
  brand              String?
  last4              String?
  expMonth           Int?
  expYear            Int?
  nickname           String?
  cardholderName     String?
  provider           CardProvider @default(SYNCTERA)
  providerCardId     String       @unique
  providerAccountId  String
  providerCustomerId String
  widgetTypes        String[]
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  terminatedAt       DateTime?
  archivedAt         DateTime?
  archivedReason     String?

  wallet  Wallet  @relation(fields: [walletId], references: [id], onDelete: Cascade)
  account Account @relation("CardAccount", fields: [accountId], references: [id], onDelete: Cascade)
  holder  User    @relation("CardHolder", fields: [holderUserId], references: [id], onDelete: Cascade)

  ledgerAccounts LedgerAccount[]
  authHolds      CardAuthHold[]
  withdrawals    Withdrawal[]
}

// ---------- Ledger ----------
model LedgerAccount {
  id                 String      @id @default(uuid())
  walletId           String?
  cardId             String?
  userId             String?
  scope              LedgerScope
  cachedBalanceCents BigInt      @default(0)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  wallet Wallet? @relation(fields: [walletId], references: [id], onDelete: Cascade)
  card   Card?   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  debitEntries  LedgerEntry[] @relation("DebitRelation")
  creditEntries LedgerEntry[] @relation("CreditRelation")
  account       Account?      @relation(fields: [accountId], references: [id])
  accountId     String?

  @@unique([cardId, scope, userId])
  @@index([walletId, cardId])
}

model LedgerEntry {
  id              String          @id @default(uuid())
  transactionId   String
  kind            LedgerEntryKind @default(OTHER)
  debitAccountId  String
  creditAccountId String
  amountCents     BigInt
  currency        Currency        @default(USD)
  description     String?
  metadata        Json?
  createdAt       DateTime        @default(now())

  debitAccount  LedgerAccount @relation("DebitRelation", fields: [debitAccountId], references: [id])
  creditAccount LedgerAccount @relation("CreditRelation", fields: [creditAccountId], references: [id])

  @@index([transactionId])
}

// ---------- Holds & Withdrawals ----------
model CardAuthHold {
  id             String         @id @default(uuid())
  cardId         String
  walletId       String
  userId         String
  providerName   CardProvider   @default(SYNCTERA)
  providerAuthId String
  providerCardId String
  amountMinor    Int
  currency       Currency       @default(USD)
  status         AuthHoldStatus @default(PENDING)
  metadata       Json?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  clearedAt      DateTime?
  reversedAt     DateTime?

  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerName, providerAuthId])
  @@index([cardId, status])
}

model Withdrawal {
  id            String           @id @default(uuid())
  walletId      String
  cardId        String
  userId        String
  amountMinor   Int
  currency      Currency         @default(USD)
  status        WithdrawalStatus @default(REQUESTED)
  failureReason String?
  metadata      Json?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  completedAt   DateTime?

  wallet    Wallet               @relation(fields: [walletId], references: [id], onDelete: Cascade)
  card      Card                 @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user      User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  transfers WithdrawalTransfer[]

  @@index([walletId, status])
  @@index([cardId, status])
  @@index([userId, status])
}

model WithdrawalTransfer {
  id                 String                   @id @default(uuid())
  withdrawalId       String
  providerTransferId String?                  @unique
  status             WithdrawalTransferStatus @default(PENDING)
  amountMinor        Int?
  currency           Currency                 @default(USD)
  metadata           Json?
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  completedAt        DateTime?

  withdrawal Withdrawal @relation(fields: [withdrawalId], references: [id], onDelete: Cascade)

  @@index([withdrawalId])
  @@index([status])
}

// ---------- Webhooks ----------
model WebhookEventLog {
  id              String           @id @default(uuid())
  provider        CardProvider     @default(SYNCTERA)
  eventType       WebhookEventType
  providerEventId String
  payload         Json
  processedAt     DateTime?
  createdAt       DateTime         @default(now())

  @@unique([provider, providerEventId])
}
